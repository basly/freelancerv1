{% extends 'FreelancerBundle:Default:index.html.twig' %}

{% block body %}
<div class="services-breadcrumb">
    <div class="agile_inner_breadcrumb">
        <ul class="w3_short">
            <li><a href="index.html">Home</a><i>||</i></li>
            <li>Project</li>
        </ul>
    </div>
</div>
<div class="banner-bottom">
    <div class="container">
        <div class="w3ls-title">
            <h3 class="title-w3l"><span>P</span>rojects Edit!</h3>
        </div>
    </div>
    <h1>Project edit</h1>

    <div class="col-md-12">
        <div class="form-group col-md-3">
            {{ form_label(edit_form.projectname) }}
            {{ form_errors(edit_form.projectname) }}
            {{ form_widget(edit_form.projectname, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group col-md-3">
            {{ form_label(edit_form.activityarea) }}
            {{ form_errors(edit_form.activityarea) }}
            {{ form_widget(edit_form.activityarea, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group col-md-3">
            {{ form_label(edit_form.projectdescription) }}
            {{ form_errors(edit_form.projectdescription) }}
            {{ form_widget(edit_form.projectdescription, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group col-md-3">
            {{ form_label(edit_form.payment) }}
            {{ form_errors(edit_form.payment) }}
            {{ form_widget(edit_form.payment, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group col-md-3">
            {{ form_label(edit_form.startdate) }}
            {{ form_errors(edit_form.startdate) }}
            {{ form_widget(edit_form.startdate)}}
        </div>
        <div class="form-group col-md-3">
            {{ form_label(edit_form.enddate) }}
            {{ form_errors(edit_form.enddate) }}
            {{ form_widget(edit_form.enddate)}}
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group col-md-3">
            {{ form_label(edit_form.experiencelevel) }}
            {{ form_errors(edit_form.experiencelevel) }}
            {{ form_widget(edit_form.experiencelevel, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group col-md-3">
            {{ form_label(edit_form.requiredskills) }}
            {{ form_errors(edit_form.requiredskills) }}
            {{ form_widget(edit_form.requiredskills, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>


    <div class="col-md-12">
        <div class="col-md-2">
            <a href="{{ path('project_index') }}" class="btn btn-default">
                <i class="fa fa-list">  Back to the list</i>
            </a>
        </div>
        <div class="col-md-1">
            <button type="submit" value="Edit" class="btn btn-default" /> <i class="fa fa-pencil">  Edit</i></button>
        </div>
        {{ form_end(edit_form) }}
        <div class="col-md-1">
            {{ form_start(delete_form) }}
            <button type="submit" value="Delete"  class="btn btn-default"><i class="fa fa-trash">  Delete</i></button>
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
