{% extends 'FreelancerBundle:Default:index.html.twig' %}

{% block body %}
<!-- //banner-2 -->
<!-- w3_short -->
<div class="services-breadcrumb">
    <div class="agile_inner_breadcrumb">
        <ul class="w3_short">
            <li><a href="index.html">Home</a><i>||</i></li>
            <li>Create Project</li>
        </ul>
    </div>
</div>
<!-- //w3_short -->
<!-- mail -->
<div class="banner-bottom">
    <div class="container">
    <div class="w3ls-title">
        <h3 class="title-w3l"><span>J</span>ob Done!</h3>
        <h3 class="title-w3l-3">Post a Job for Free - Start receiving proposals within minutes</h3>
    </div>

    {{ form_start(form) }}
    <div class="col-md-12">
        <div class="form-group col-md-3">
            {{ form_label(form.projectname) }}
            {{ form_errors(form.projectname) }}
            {{ form_widget(form.projectname, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group col-md-3">
            {{ form_label(form.activityarea) }}
            {{ form_errors(form.activityarea) }}
            {{ form_widget(form.activityarea, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group col-md-3">
            {{ form_label(form.projectdescription) }}
            {{ form_errors(form.projectdescription) }}
            {{ form_widget(form.projectdescription, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group col-md-3">
            {{ form_label(form.payment) }}
            {{ form_errors(form.payment) }}
            {{ form_widget(form.payment, {'attr': {'class': 'form-control'}}) }}
        </div>

    </div>
    <div class="col-md-12">
        <div class="form-group col-md-3">
            {{ form_label(form.startdate) }}
            {{ form_errors(form.startdate) }}
            {{ form_widget(form.startdate, {'attr':{'class': 'glyphicon glyphicon-th'}}) }}
        </div>
        <div class="input-group-em">
            {{ form_label(form.enddate) }}
            {{ form_errors(form.enddate) }}
            {{ form_widget(form.enddate,{'attr':{'class': 'glyphicon glyphicon-th'}}) }}
        </div>

    </div>
    <div class="col-md-12">
        <div class="form-group col-md-3">
            {{ form_label(form.experiencelevel) }}
            {{ form_errors(form.experiencelevel) }}
            {{ form_widget(form.experiencelevel, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group col-md-3">
            {{ form_label(form.requiredskills) }}
            {{ form_errors(form.requiredskills) }}
            {{ form_widget(form.requiredskills, {'attr': {'class': 'form-control'}}) }}
        </div>

    </div>
    <div class="col-md-12">
        <div class="form-group col-md-3">
            <button type="submit" class="btn btn-success"><i class="fa fa-plus"></i> Add </button>

            <a class="btn btn-default" href="{{ path('project_index') }}"><i class="fa fa-list"></i> Back to the list</a>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
