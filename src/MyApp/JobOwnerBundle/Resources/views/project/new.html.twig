        <div class="form-group col-md-3">
            {{ form_label(form.activityarea) }}
            {{ form_errors(form.activityarea) }}
            {{ form_widget(form.activityarea, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group col-md-3">
            {{ form_label(form.projectdescription) }}
            {{ form_errors(form.projectdescription) }}
            {{ form_widget(form.projectdescription, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group col-md-3">
            {{ form_label(form.payment) }}
            {{ form_errors(form.payment) }}
            {{ form_widget(form.payment, {'attr': {'class': 'form-control'}}) }}
        </div>

    </div>
    <div class="col-md-12">
        <div class="form-group col-md-3">
            {{ form_label(form.startdate) }}
            {{ form_errors(form.startdate) }}
            {{ form_widget(form.startdate, {'attr':{'class': 'form-control'}}) }}
