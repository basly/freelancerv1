            {{ form_label(form.requiredskills) }}
            {{ form_errors(form.requiredskills) }}
            {{ form_widget(form.requiredskills, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
        <div class="col-md-12">
        <div class="col-md-6">
             <input class="btn btn-default" type="submit" value="Add New Project" />
            <a class="btn btn-default" href="{{ path('project_index') }}"><i class="fa fa-list"></i> Back to the list</a>
        </div>
        </div>
    </div>
