            {% for reply in replys %}
                <div class="row">
                    {% set breakLoop = false %}

                    {% for ad in admin  %}
                        {% if breakLoop==false %}
                            {% if(reply.iduser==user.id) %}
                                <div class="col-md-1 col-md-offset-1">
                                    <div class="col-md-8">
                                        <img class="img-rounded" src={{ asset('bundles/freelancer/Front/images/user.png') }} alt="Avatar" style="width:40%">


                                        <h5>{{ user.firstname }} {{ user.lastname }}</h5>

                                    </div>

                                </div>


                            {% else %}
                                <div class="col-md-1 col-md-offset-1">
                                <div class="col-md-8">
                                    <img class="img-rounded" src={{ asset('bundles/freelancer/Front/images/admin.jpg') }} alt="Avatar" style="width:40%">

                                    <h5>{{ ad.firstname }} {{ ad.lastname }}</h5>
                                </div>
                                </div>
                                {%set breakLoop = true %}
                            {% endif %}
                        {% endif %}
                    {% endfor %}


                    <div class="col-md-2">
                        <h4> Message :</h4>
                    </div>
                    <div class="col-md-9">
                        <h4>{{ reply.message }}</h4>
                    </div>
                </div>
            {% endfor %}
            <div class="col-md-offset-1 col-md-10 ">
                {{ form_start(form) }}
                <div class="col-md-8">

                        {{ form_label(form.message) }}
                        {{ form_errors(form.message) }}
                        {{ form_widget(form.message, {'attr': {'class': 'form-control col-md-6','rows':'4' ,'style':'height:100px'}}) }}


                {{ form_end(form) }}
            </div>

        </div>
    </div>
