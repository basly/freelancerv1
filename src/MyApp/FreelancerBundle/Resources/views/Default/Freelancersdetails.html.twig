                </div>

            </form>
        {% endif %}
        {% if (app.user.email!=user.email ) %}



                <div class="col-md-offset-5">
                    <img class="img-rounded" src={{ asset('bundles/freelancer/Front/images/user.png') }} alt="Avatar">
                </div>

                <div class="col-md-offset-4 col-md-4">
                    <table class="table table-striped tablefont20">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Value</th>

                        </tr>
                        </thead>
                        <tbody>
