                        </tr>
                        <tr>
                            <td>skills</td>
                            <td><input name="skills" type="text" placeholder="{{ user.skills }}"></td>
                        </tr>
                        <tr>
                            <td>Phone</td>
                            <td><input name="phone" type="text" placeholder="{{ user.phonenumber }}"></td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <td><input name="email" type="text" placeholder="{{ user.email }}" value="{{ user.email }}" hidden="hidden"></td>
                <div class="col-lg-offset-5 col-md-2">
