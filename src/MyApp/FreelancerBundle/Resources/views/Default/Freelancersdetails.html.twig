                            <td>Username</td>
                            <td>{{ user.username }}</td>

                        </tr>
                        <tr>
                            <td>Firstname</td>
                            <td>{{ user.firstname }}</td>
                        </tr>
                        <tr>
                            <td>Lastname</td>
                            <td>{{ user.lastname }}</td>
                        </tr>
                        <tr>
                            <td>email</td>
                            <td>{{ user.email }}</td>

                        </tr>
                        <tr>
                            <td>skills</td>
                            <td>{{ user.skills }}</td>
                        </tr>
                        <tr>
                            <td>Phone</td>
                            <td>{{ user.phonenumber }}</td>
