{% extends '@Freelancer/Default/layout.html.twig' %}
{%  block content %}
    {%  if app.user!= null %} }}
        {% if (app.user.email==user.email) %}


            <form method="post" action="{{ path('freelancer_EditProfile') }}">
                <div class="col-md-offset-5 col-md-4">
                    <img class="img-rounded" src={{ asset('bundles/freelancer/Front/images/user.png') }} >
                </div>
<div class="col-md-1">
<button class="button18"  > raouf</button>
</div>
                <div class="col-md-1">
                    <button class="button18" >
                        Subscribe
                    </button>
                </div>
                <div class="col-md-offset-4 col-md-4">
                    <table class="table table-striped tablefont20">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Value</th>

                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>Username</td>
                            <td>{{ user.username }}</td>

