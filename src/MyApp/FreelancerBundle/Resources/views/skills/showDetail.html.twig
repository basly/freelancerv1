{% extends 'FreelancerBundle:Default:index.html.twig' %}

{% block body %}
    <div class="services-breadcrumb">
        <div class="agile_inner_breadcrumb">
            <ul class="w3_short">
                <li><a href="index.html">Home</a><i>||</i></li>
                <li>Skills Details</li>
            </ul>
        </div>
    </div>
    <link rel="stylesheet" href="{{asset('bundles/freelancer/css/skillBar.css')}}" />
    <div class="banner-bottom">
        <div class="container">
            <div class="w3ls-title">
                <h3 class="title-w3l"><span>S</span>kills!</h3>
            </div>
        </div>
    </div>
    {% for skill in skills %}
      {#  {% set i=0 %}

            {% set size = '{{ '+skill.skilllevel+' }}'  %}
            <p>Skill name : {{ skill.skillname}}</p>
            <p> Years of Experience : {{  skill.skillexperience}}</p>
            <p>Certified : {{  skill.certification}}</p>
            <div class="container">
                {% if loop.index is divisible by(2) %}
                <div class="skills html" style="width:{{size}}%">{{ size}}%</div>
                {% else %}
                <div class="skills php" style="width:{{size}}%">{{ size}}%</div>
                {% endif%}
            </div>

        {% set i=i+1 %}#}
            {% set size = '{{ '+skill.skilllevel+'}}'  %}


            <br><br><div class="skillbar clearfix" data-percent={{ size}}%>

                {% if loop.index is divisible by(2) %}
                    <div class="skillbar-title" style="background: #d35400;"><span>{{ skill.skillname}}</span></div>
                    <div class="skillbar-bar" style="background: #e67e22;"></div>
                {% elseif loop.index is divisible by(3) %}
                    <div class="skillbar-title" style="background: #2980b9;"><span>{{ skill.skillname}}</span></div>
                    <div class="skillbar-bar" style="background: #3498db;"></div>
                {% elseif loop.index is divisible by(4) %}
                    <div class="skillbar-title" style="background: #2c3e50;"><span>{{ skill.skillname}}</span></div>
                    <div class="skillbar-bar" style="background: #2c3e50;"></div>
                {% elseif loop.index is divisible by(5) %}
                    <div class="skillbar-title" style="background: #46465e;"><span>{{ skill.skillname}}</span></div>
                    <div class="skillbar-bar" style="background: #5a68a5;"></div>
                {% elseif loop.index is divisible by(6) %}
                    <div class="skillbar-title" style="background: #333333;"><span>{{ skill.skillname}}</span></div>
                    <div class="skillbar-bar" style="background: #525252;"></div>
                {% else %}
                    <div class="skillbar-title" style="background: #27ae60;"><span>{{ skill.skillname}}</span></div>
                    <div class="skillbar-bar" style="background: #2ecc71;"></div>
                {% endif%}
                <br>
            <div><p><b>Certification :</b> {{ skill.certification}}   &nbsp;&nbsp;&nbsp;&nbsp;         <b> Expertise :</b> {{ skill.skillexperience}} years</p></div>
                <div class="skill-bar-percent">{{ size}}%</div>
            </div><br> <!-- End Skill Bar -->

        {% endfor %}

    <br><br><ul>

    </ul>

{% endblock %}
{% block javascripts %}
    <script src="{{ asset('bundles/freelancer/Front/js/jquery213.min.js')}}"></script>
    <script src="{{asset('bundles/freelancer/js/barAnimation.js')}}"></script>
    <script type="text/javascript" src="{{ asset('bundles/freelancer/Front/js/jquery.min.js')}}"></script>

{% endblock javascripts %}