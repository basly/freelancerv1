{% extends 'base.html.twig' %}

{% block body %}
    <h1>Skill</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ skill.id }}</td>
            </tr>
            <tr>
                <th>Skillname</th>
                <td>{{ skill.skillname }}</td>
            </tr>
            <tr>
                <th>Skillexperience</th>
                <td>{{ skill.skillexperience }}</td>
            </tr>
            <tr>
                <th>Certification</th>
                <td>{{ skill.certification }}</td>
            </tr>
            <tr>
                <th>Skilllevel</th>
                <td>{{ skill.skilllevel }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('skills_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ asset('uploads/images/skills/' ~ skill.image) }}" />Certification view</a>
        </li>
        <li>
            <a href="{{ path('skills_edit', { 'id': skill.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
